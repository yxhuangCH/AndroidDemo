<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".wordcloud.WordCloudActivity">

    <com.yxhuang.androiddailydemo.wordcloud.WordCloudView
        android:id="@+id/wordcloud"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.yxhuang.androiddailydemo.dywordcloud.DyWordCloudView
        android:id="@+id/dy_word_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#282A50"
        android:paddingTop="40dp"
        android:paddingBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wordcloud"></com.yxhuang.androiddailydemo.dywordcloud.DyWordCloudView>
</androidx.constraintlayout.widget.ConstraintLayout>